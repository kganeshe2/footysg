{
	"env": {
        "browser": true,
        "node": true,
        "meteor": true
    },
  	"parserOptions": {
	    "ecmaVersion": 6,
	    "sourceType": "module"
  	},
  	"plugins": ["meteor"],
  	"extends": ["airbnb","plugin:meteor/recommended"],
  	"rules": {
    	"semi": [2, "always"],
      "import/extensions":0,
      "object-shorthand": [0, "never"],
      "radix": [2, "as-needed"],
      "no-underscore-dangle": [2, { "allow": ["_id"] }]
  }
}