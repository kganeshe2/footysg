{
	"env": {
        "browser": true,
        "node": true,
        "meteor": true
    },
  	"parserOptions": {
	    "ecmaVersion": 6,
	    "sourceType": "module"
  	},
  	"plugins": ["meteor"],
  	"extends": ["airbnb","plugin:meteor/recommended"],
    "settings": {
      "import/core-modules": ["meteor"]
    },
  	"rules": {
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [2, {"devDependencies": false}],
      "object-shorthand": [0, "never"],
    	"semi": [2, "always"],
      "radix": [2, "as-needed"],
      "no-underscore-dangle": [2, { "allow": ["_id"] }],
      "prefer-arrow-callback": 0
  }
}
